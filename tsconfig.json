{
  "compilerOptions": {
    "lib": ["ES2020", "ES2020.Promise"],
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "alwaysStrict": false,
    "strictNullChecks": false,
    "strictBindCallApply": false,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "src",
    "sourceRoot": "src",
    "outDir": "dist", // Output directory for compiled JavaScript files
    "rootDir": "src", // Root directory of your TypeScript source files
  },
  "include": ["src/**/*.ts"], // Specify the files to include in compilation
  "exclude": ["node_modules"] // Specify the files to exclude from compilation
}
